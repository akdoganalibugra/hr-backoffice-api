# ---------- DATABASE CONFIGURATION ----------
# Central HR Backoffice Database (Prisma) - Update with your PostgreSQL credentials
DATABASE_URL="postgresql://username:password@localhost:5432/hr_backoffice_db?schema=public"

# ---------- JWT CONFIGURATION ----------
# Generate a strong secret key for JWT token signing
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1d"

# ---------- APPLICATION CONFIGURATION ----------
NODE_ENV="development"
PORT=3002
API_PREFIX="api/v1"

# ---------- LOGGING ----------
LOG_LEVEL="debug"

# ---------- RATE LIMITING ----------
THROTTLE_TTL=60
THROTTLE_LIMIT=10
